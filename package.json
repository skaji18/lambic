{
  "name": "lambic",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint --fix",
    "type-check": "npx tsc -p . --noEmit",
    "test:integration": "mocha tests/integration/bootstrap.js --recursive tests/integration --timeout 0",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "firebase": "^9.0.1",
    "firebaseui-ja": "^1.0.0",
    "material-design-icons-iconfont": "^6.1.0",
    "moment": "^2.29.1",
    "register-service-worker": "^1.7.2",
    "vue": "^3.2.6",
    "vue-router": "^4.0.11",
    "vuetify": "^3.0.0-alpha.11",
    "vuex": "^4.0.2",
    "vuexfire": "^3.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vue/babel-preset-app": "^5.0.0-beta.3",
    "@vue/cli-plugin-babel": "^5.0.0-beta.3",
    "@vue/cli-plugin-eslint": "^5.0.0-beta.3",
    "@vue/cli-plugin-pwa": "^5.0.0-beta.3",
    "@vue/cli-plugin-unit-mocha": "^5.0.0-beta.3",
    "@vue/cli-service": "^5.0.0-beta.3",
    "@vue/compiler-sfc": "^3.2.6",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.13",
    "chai": "^4.3.4",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.17.0",
    "firebase-tools": "^9.16.6",
    "mocha": "^9.1.1",
    "prettier": "^2.3.2",
    "puppeteer": "^10.2.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended",
      "@vue/typescript",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    }
  },
  "eslintIgnore": [
    "tests/**/*"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
